    <section style="display:block;float:left;position:relative;width:100%;">
        <div style="padding-right:20px;">
            <aside style="padding:40px 10px 40px 40px;margin-top:30px;color:#acacac;font-size:16px;line-height:24px;"> 
                <form method="get" action="/articles/filter" id="filter"><input name="q" type="text" size="30" placeholder="Filter..." /></form>  
                <div id="articles-block">
                    <div class="mCustomScrollbar" style="max-height:800px;overflow:auto;">            
                    [% FOREACH article IN articles %]
                        <div class="article_block">
                            <a href="#" class="article_link">
                                <input type="hidden" value="[% article.id %]" class="article_id">
                                <h3 style="font-weight:600;margin:0;padding:12px 0;">[% article.title %]</h3><span>
                                <h4 style="margin:5px 0;font-weight:300;color:gray;">(&nbsp;[% article.type %]&nbsp;)</h4></span>
                                [% IF article.type == 'Event' %]
                                    <h5 style="margin:0;padding:10px 0;">Date - [% article.event_date %]</h5>
                                [% END %]
                                <!--<p style="font-size:16px;line-height:1.5;margin:0;padding-top:10px;padding-bottom:10px;color:#acacac;font-weight:400;" class="article_content">
                                    [% article.content %]
                                </p>-->
                                <span style="font-size:16px;line-height:1.5;margin:0;padding-top:10px;padding-bottom:10px;color:#acacac;font-weight:400;" class="article_content">
                                    [% article.content %]
                                </span>
                            </a>
                        </div>
                    [% END %]
                    </div>
                </div>
            </aside>           
        </div>
    </section>
    
    <!-- customer scrollbar -->
